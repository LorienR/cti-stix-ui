  {{#md-collection content=model.items as |item|}}
    <div class="collection-item list-collection-item">
      {{#link-to "sighting" item.id}}
        {{item.sighting_of_ref}}
      {{/link-to}}

      {{#if item.where_sighted_refs}}
            {{#each item.where_sighted_refs as |where_sighted|}}
              <div class="chip orange" title="Where Sighted Ref">{{where_sighted}}</div>
            {{/each}}
        {{/if}}

      <div class="secondary-content">  
      <div class="option-button-column-right">
        {{#link-to (query-params deleteObjectId=item.id) class="btn btn-small waves-effect waves-light red"}}
          <i class="fa fa-trash"></i>
        {{/link-to}}
      </div>
      <div class="option-button-column-right">
        {{#link-to "sighting-edit" item.id title="Edit" class="btn btn-small waves-effect waves-light"}}
          <i class="fa fa-pencil"></i>
        {{/link-to}}  
      </div>    
    </div>
    </div>
  {{/md-collection}}
</div>